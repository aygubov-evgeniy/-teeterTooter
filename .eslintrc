{
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "plugins": ["prettier"],
  "rules": {
    "vue/no-mutating-props": "off",
    "vue/require-default-prop": "off",
    "vue/component-name-in-template-casing": ["error", "kebab-case"],
    "no-unused-vars": ["off", {
      "varsIgnorePattern": "^_",
      "argsIgnorePattern": "^_",
      "args": "after-used"
    }],
    "@typescript-eslint/no-unused-vars": ["off"],
    "vue/valid-v-slot": ["error", {
      "allowModifiers": true
    }],
    "vue/html-self-closing": ["error", {
      "html": {
        "void": "always",
        "normal": "always",
        "component": "always"
      },
      "svg": "always",
      "math": "always"
    }],
    "prefer-const": "error",
    "no-var": "error"
  }
}
